{
  "manifest_version": 3,
  "name": "Realtime AI Subtitle v2",
  "version": "2.0",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://api.moonshot.cn/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "options.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "speech.js",
        "translator.js",
        "overlay.js",
        "content.js"
      ]
    }
  ]
}
